---
import Voting from '../components/Voting';
import MainLayout from '../layouts/MainLayout.astro';
import { getDomainUrl } from '../utils/utils';

const { request } = Astro;

const domain = getDomainUrl(request);
---

<MainLayout title="Pokemon Smash/Pass">
  <main
    class="flex flex-auto items-center justify-center place-self-center self-center justify-self-center"
  >
    <Voting domain={domain} client:only />
  </main>
</MainLayout>
